<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}HowTo &middot; fweber.info{% endblock %}</title>

        <!-- CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ app.request.baseUrl ~ '/assets/css/app.css' }}">
        
        <!-- JS -->
        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
        <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        <script src="{{ app.request.baseUrl ~ '/assets/js/anchorify.min.js' }}"></script>
        <script src="{{ app.request.baseUrl ~ '/assets/js/app.js' }}"></script>
        
        <!-- FONTS-->
        <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow|Ubuntu|Open+Sans|Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    </head>
    <body>
        
        <div id="wrap">

            <!-- HEADER -->
            <div class="o-header-container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="o-logo o-logo-header">
                                <h1>How-To
                                    <small>fweber.info</small>
                                </h1>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- CONTENT -->
            <div class="o-content-container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 o-content o-font-open-sans">

                            {% block content %}
                            {% endblock %}

                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- FOOTER -->
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 o-footer o-font-open-sans">

                        fweber.info |
                        <a href="http://fweber.info">Website</a>

                    </div>
                </div>
            </div>
        </div>
        
    </body>
</html>
