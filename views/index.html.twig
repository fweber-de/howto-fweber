{% extends 'layout.html.twig' %}

{% block content %}

    {% if posts|length == 0 %}
        <h3>No posts found!</h3>
    {% else %}

        <h2>Posts</h2>

        {% for post in posts %}
            <div class="media">
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="{{ path('post', {slug: post.slug}) }}">{{ post.title }}</a>
                    </h3>
                    <small>{{ post.date|date('d.m.Y H:i') }}</small>
                </div>
            </div>
        {% endfor %}

    {% endif %}

{% endblock %}
